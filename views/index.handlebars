<div class = "master-container">

	<div class = "recipe">	
	items stocked
		<ul>
			{{#each stock}}
			<li>
				{{this.item_name}}
                    <form action="update/{{this.id}}?_method=PUT" method="POST">
                        <button class="btn btn-primary" type="submit">Use item</button>
                    </form>	
                    <form action="delete/{{this.id}}?_method=DELETE" method="POST">
                        <button class="btn btn-primary" type="submit">Delete item</button>
                    </form>                    
            </li>
            {{/each}}
        </ul>
		items to use
		<ul>
			{{#each stock}}
			{{#if this.include}}
				<li>
					{{this.item_name}}
                    <form action="return/{{this.id}}?_method=PUT" method="POST">
                        <button class="btn btn-primary" type="submit">Finished using</button>
                    </form>						
				</li>
			{{/if}}
			{{/each}}
		</ul>

	</div>
	<div class = "fridge">
		<div class = 'items'>
		<img src = '..assets/images/meat.jpg' style = 'width: 100px; height: 100px'>
		fridge
			<ul>
				{{#each stock}}
					{{#if this.fridge}}
						<li>
							{{this.item_name}}
						</li>
					{{/if}}
				{{/each}}
			</ul>

		</div>
	</div>
		<div class = "freezer">
			<div class = 'items'>
			freezer
{{!-- 				<ul>
					{{#each stock}}
						{{#if this.fridge}}
							<li>
								{{this.item_name}}
							</li>
						{{/if}}
					{{/each}}
				</ul> --}}
			</div>
	</div>
		<div class = "clock">
		<div class = 'items'>
			<div >clock</div>
		</div>
	</div>
	<div class = "spice">
		<div class = 'items'>
			<div >Spice Rack</div>
            <form class="create-update-form" action="create" method="POST">

                <div class="form-group">
                    <label for="ca">Item:</label>
                    <input type="text" id="ca" name="name" placeholder="Add food">
                </div>
                <div class="form-group">
                    <label for="ca">category:</label>
                    <input type="text" id="ca" name="cat" placeholder="Add food">
                </div>
                <div class="form-group">
                    <label for="ca">place:</label>
                    <input type="text" id="ca" name="place" placeholder="cupboard">
                </div>

                <button class="btn btn-secondary" type="submit">Add</button>
            </form>
            <ul>
				{{#each stock}}
					{{#if this.spice}}
						<li>
							{{this.item_name}}
						</li>
					{{/if}}
				{{/each}}
			</ul>

		</div>
	</div>
	<div class = "pantry">
		<div class = 'items'>
		pantry
		<input type="text" id="co" name="name" placeholder="food">
		<button class="btn btn-secondary" type="submit">Add item</button>
		</div>
			<ul>
				{{#each stock}}
					{{#if this.pantry}}
						<li>
							{{this.item_name}}
						</li>
					{{/if}}
				{{/each}}
			</ul>
	</div>
 
 </div>